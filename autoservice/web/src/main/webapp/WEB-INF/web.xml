<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <display-name>Transport App</display-name>

  <context-param>
    <param-name>first-param</param-name>
    <param-value>first-param-value</param-value>
  </context-param>
  <context-param>
    <param-name>second-param</param-name>
    <param-value>second-param-value</param-value>
  </context-param>

  <servlet>
    <servlet-name>TransportServlet</servlet-name>
    <servlet-class>by.itacademy.web.servlet.TransportServlet</servlet-class>
    <init-param>
      <param-name>servlet-param</param-name>
      <param-value>servlet-param-value</param-value>
    </init-param>
  </servlet>

  <servlet-mapping>
    <servlet-name>TransportServlet</servlet-name>
    <url-pattern>/transports</url-pattern>
  </servlet-mapping>

  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
</web-app>
